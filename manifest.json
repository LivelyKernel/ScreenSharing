{
    "name": "Lively Desktop Capture",
    "version": "2",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://lively-web.org/*", "*://localhost/*"],
            "js": ["livelyInjection.js"]
        }
    ],
    "permissions": [
        "desktopCapture"
    ]
}